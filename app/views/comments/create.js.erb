$(document).ready(function(){
  $.ajax().done(function(){

          $('#comment_text').val('');
          $('.paginate-bar').html('<%= j paginate(@comment.song.comments.newest.page(1), remote: true) %>').appendTo('.paginate-bar');
          $('.comments_list').html('<%= j render partial: "comments/comment", collection: @comment.song.comments.sort_by(&:created_at) %>').appendTo('.comments_list');
  })
})
