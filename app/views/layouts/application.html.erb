<!DOCTYPE html>
<html>
  <head>
    <title>Jinx MP3</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="super_container">
      <!-- Header -->
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
      <header class="header trans_400">
        <!-- Logo -->
        <div class="logo">
          <a href="<%= root_path %>"><span>Jinx</span>MP3<img src="../assets/play.png" alt=""></a>
        </div>
        <div class="container">
          <div class="row">
            <div class="col">
              <div class="header_content d-flex flex-row align-items-center justify-content-start trans_400">
                <nav class="main_nav">
                  <ul class="d-flex flex-row align-items-start justify-content-start">
                    <li><a href="<%= root_path %>">Home</a></li>
                    <li><a href="<%= songs_path %>">Songs</a></li>
                    <li><a href="<%= play_lists_path %>">Playlists</a></li>
                  </ul>
                </nav>
              </div>
            </div>
          </div>
        </div>
        <!-- Submit & Social -->
        <div class="header_right d-flex flex-row align-items-start justify-content-start">
          <!-- Submit -->


<!-- modal -->


<!-- end modal -->
        <div class="searchbar">
          <input class="search_input" type="text" name="" placeholder="Search..." data-behavior="autocomplete">
          <a href="#" class="search_icon"><i class="fa fa-search"></i></a>
        </div>
          <!-- Social -->
          <div class="social">
            <ul class="d-flex flex-row align-items-start justify-content-start">
              <% if user_signed_in? %>
                <li>
                  <%= link_to destroy_user_session_path, method: 'delete' do %>
                    <i class="fa fa-sign-out" aria-hidden="true"></i>
                  <% end %>
                </li>
              <% else %>
                <li><a href="#" data-toggle="modal"  data-target="#signUpModal"><i class="fa fa-user" aria-hidden="true"></i></a></li>
                <li><a href="#"data-toggle="modal" data-target="#logInModal"><i class="fa fa-sign-in" aria-hidden="true"></i></a></li>
              <% end %>
            </ul>
          </div>
          <!-- Hamburger -->
          <div class="hamburger"><i class="fa fa-bars" aria-hidden="true"></i></div>
        </div>
      </header>
      <!-- Menu -->
      <div class="menu">
        <div class="menu_content d-flex flex-column align-items-end justify-content-start">
          <ul class="menu_nav_list text-right">
            <li><a href="index.html">Home</a></li>
            <li><a href="about.html">About</a></li>
            <li><a href="episodes.html">Episodes</a></li>
            <li><a href="blog.html">Blog</a></li>
            <li><a href="contact.html">Contact</a></li>
          </ul>
          <div class="menu_extra d-flex flex-column align-items-end justify-content-start">
            <div class="menu_submit"><a href="#">Submit your song</a></div>
            <div class="social">
              <ul class="d-flex flex-row align-items-start justify-content-start">
                <li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                <li><a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                <li><a href="#"><i class="fa fa-soundcloud" aria-hidden="true"></i></a></li>
                <li><a href="#"><i class="fa fa-vimeo" aria-hidden="true"></i></a></li>
                <li><a href="#"><i class="fa fa-youtube-play" aria-hidden="true"></i></a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <!-- Home -->
    <%= yield %>
      <!-- Latest Episodes -->
      <footer class="footer">
    <div class="container">
      <div class="row footer_logo_row">
        <div class="col d-flex flex-row align-items-center justify-content-center">
          <div class="logo">
            <a href="#"><span>Jinx</span>MP3<img src="../assets/play.png" alt=""></a>
          </div>
        </div>
      </div>
      <div class="row footer_content_row">

        <!-- Tags -->
        <div class="col-lg-4">
          <div class="footer_title">Tags</div>
          <div class="footer_list">
            <div><div><a href="#">Japanese</a></div></div>
            <div><div><a href="#">Pop</a></div></div>


          </div>
        </div>
            <div class="col-lg-4">
              <div class="footer_title">Latest Songs</div>
              <div class="latest_container">
                <!-- Latest -->
                <%= render partial: 'layouts/song', collection: @songs %>
              </div>
            </div>
            <!-- Gallery -->
            <div class="col-lg-4">
              <div class="footer_title">Instagram</div>
              <div class="gallery d-flex flex-row align-items-start justify-content-start flex-wrap">
                <!-- Gallery Item -->
                <div class="gallery_item">
                  <a class="colorbox" href="../assets/gallery_1_large.jpg"><img src="../assets/gallery_1.jpg" alt=""></a>
                </div>
