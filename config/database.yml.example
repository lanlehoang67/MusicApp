default: &default
  adapter: mysql2
  encoding: utf8
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  username: ENV("USERNAME")
  password: ENV("PASSWORD")
  socket: /var/run/mysqld/mysqld.sock

development:
  <<: *default
  database: music_app_development
test:
  <<: *default
  database: music_app_test
production:
  <<: *default
  database: music-app_production
  username: music-app
  password: <%= ENV['MUSIC-APP_DATABASE_PASSWORD'] %>
